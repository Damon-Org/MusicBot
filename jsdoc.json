{
    "tags": {
        "allowUnknownTags": "all"
    },
    "source": {
        "include": ["lib"],
        "exclude": ["node_modules"],
        "includePattern": "\\.(js)$"
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/category"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "template": "node_modules/better-docs"
    },
    "templates": {
        "better-docs": {
            "name": "Damon Music Documentation",
            "logo": "/favicon.png"
        }
    }
}
